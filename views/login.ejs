<!DOCTYPE html>
<html lang="es">
  <head>
    <!-- METADATOS BASICOS -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
    <title>Login - Bienvenido</title>

    <!-- TAILWINDCSS CDN Y CONFIGURACION DE FUENTES PERSONALIZADAS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/tailwindConfig.js"></script>
    <!-- FUENTES DE GOOGLE FONTS -->
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Share+Tech&display=swap"
      rel="stylesheet"
    />
    <!-- LIBRERIAS DE ANIMACION Y ICONOS -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <!-- ESTILOS PERSONALIZADOS PARA FONDO ANIMADO -->
    <link rel="stylesheet" href="/css/registerAnimation.css" />
  </head>
  <body
    class="min-h-screen flex items-center justify-center p-4 bg-[#f3f4f6] dark:bg-[#18181b] transition-colors duration-300"
  >
    <!-- FONDO ANIMADO CON CIRCULOS FLOTANTES -->
    <div class="floating-circles pointer-events-none">
      <div class="circle"></div>
      <div class="circle"></div>
      <div class="circle"></div>
    </div>
    <!-- CONTENEDOR PRINCIPAL DEL LOGIN -->
    <div class="w-full max-w-md relative z-10">
      <div
        class="rounded-2xl p-8 shadow-2xl border border-white/20 bg-white/10 dark:bg-black/30 dark:border-[#c2410c] backdrop-blur-lg transition-colors duration-300"
        data-aos="zoom-in"
        data-aos-duration="800"
      >
        <!-- LOGO E ICONO DE USUARIO -->
        <div class="text-center mb-8" data-aos="fade-down" data-aos-delay="200">
          <div
            class="w-20 h-20 bg-gradient-to-br from-[#ff6b35] to-[#ff8c42] dark:from-[#c2410c] dark:to-[#ff6b35] rounded-full mx-auto flex items-center justify-center mb-4 shadow-lg"
          >
            <i data-feather="user" class="w-10 h-10 text-white"></i>
          </div>
          <h1
            class="text-3xl font-bold text-black dark:text-white mb-2 font-oswald"
          >
            Bienvenid@
          </h1>
          <p class="text-gray-800 dark:text-gray-200 font-poppins">
            Inicia sesión en tu cuenta
          </p>
        </div>
        <!-- FORMULARIO DE LOGIN -->
        <form
          class="space-y-6"
          novalidate
          method="post"
          action="/auth/login"
          id="login-form"
        >
          <!-- CAMPO DE CORREO ELECTRONICO -->
          <div data-aos="fade-right" data-aos-delay="400">
            <label
              class="block text-gray-800 dark:text-gray-200 text-sm font-medium mb-2 font-poppins"
            >
              <i data-feather="mail" class="w-4 h-4 inline mr-2"></i>
              Correo Electronico
            </label>
            <input
              type="email"
              id="correo"
              name="correo"
              class="w-full px-4 py-3 bg-white/70 dark:bg-black/30 border border-white/20 rounded-lg text-black dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#ff6b35] transition-all duration-300 font-poppins"
              placeholder="tu@email.com"
            />
            <p id="correo-error" class="text-xs text-red-600 mt-1 hidden"></p>
          </div>
          <!-- CAMPO DE CONTRASENA -->
          <div data-aos="fade-left" data-aos-delay="600">
            <label
              class="block text-gray-800 dark:text-gray-200 text-sm font-medium mb-2 font-poppins"
            >
              <i data-feather="lock" class="w-4 h-4 inline mr-2"></i>
              Contrasena
            </label>
            <div class="relative">
              <input
                type="password"
                id="contra"
                name="contra"
                class="w-full px-4 py-3 bg-white/70 dark:bg-black/30 border border-white/20 rounded-lg text-black dark:text-white placeholder-gray-600 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#ff6b35] transition-all duration-300 pr-12 font-poppins"
                placeholder="••••••••"
              />
              <button
                type="button"
                onclick="togglePassword('contra', 'eye-icon')"
                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-naranja transition-colors"
                tabindex="-1"
              >
                <i data-feather="eye" id="eye-icon" class="w-5 h-5"></i>
              </button>
            </div>
            <p id="contra-error" class="text-xs text-red-600 mt-1 hidden"></p>
          </div>
          <!-- OPCIONES DE RECORDAR Y OLVIDE CONTRASENA -->
          <div
            class="flex items-center justify-between text-sm"
            data-aos="fade-up"
            data-aos-delay="800"
          >
            <a
              href="/auth/forgot"
              class="text-[#ff6b35] hover:text-[#ff8c42] dark:text-[#ff8c42] dark:hover:text-[#ff6b35] font-medium transition-colors font-poppins focus:text-[#ff8c42] active:text-[#ff8c42] sm:hover:text-[#ff8c42] sm:active:text-[#ff8c42]"
            >
              Olvidaste tu contraseña
            </a>
          </div>
          <!-- BOTON DE INICIAR SESION -->
          <button
            onclick="if(localStorage.getItem('chatUserId')) localStorage.removeItem('chatUserId')"
            type="submit"
            class="w-full text-white font-semibold py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff6b35] focus:ring-opacity-50 bg-gradient-to-r from-[#ff6b35] to-[#ff8c42] dark:from-[#c2410c] dark:to-[#ff6b35] transition-all duration-300 font-oswald flex items-center justify-center gap-2 hover:scale-105 sm:hover:scale-105 active:scale-95 sm:active:scale-95 focus:scale-95 sm:focus:scale-95"
            data-aos="zoom-in"
            data-aos-delay="1000"
          >
            <i data-feather="log-in" class="w-5 h-5 inline"></i>
            Iniciar Sesion
          </button>
          <!-- SEPARADOR SOCIAL -->
          <div class="relative my-6" data-aos="fade-in" data-aos-delay="1200">
            <div class="relative flex justify-center text-sm">
              <span
                class="bg-transparent px-2 text-gray-400 dark:text-gray-500 font-poppins"
                >O CONTINUA CON</span
              >
            </div>
          </div>
          <!-- BOTONES DE OAUTH2 -->
          <div
            class="grid grid-cols-2 gap-4"
            data-aos="fade-up"
            data-aos-delay="1400"
          >
            <a
              href="/auth/github"
              class="flex items-center justify-center px-4 py-3 bg-white/10 dark:bg-black/30 border border-white/20 dark:border-gray-700 rounded-lg text-black dark:text-white transition-all duration-300 font-poppins hover:scale-105 sm:hover:scale-105 active:scale-95 sm:active:scale-95 focus:scale-95 sm:focus:scale-95 hover:bg-white/20 dark:hover:bg-black/50"
            >
              <i data-feather="github" class="text-black dark:text-white"></i>
              <span>Github</span>
            </a>
            <a
              href="/auth/google"
              class="flex items-center justify-center px-4 py-3 bg-white/10 dark:bg-black/30 border border-white/20 dark:border-gray-700 rounded-lg text-black dark:text-white transition-all duration-300 font-poppins hover:scale-105 sm:hover:scale-105 active:scale-95 sm:active:scale-95 focus:scale-95 sm:focus:scale-95 hover:bg-white/20 dark:hover:bg-black/50"
            >
              <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                  fill="#4285F4"
                />
                <path
                  d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                  fill="#34A853"
                />
                <path
                  d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                  fill="#FBBC05"
                />
                <path
                  d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                  fill="#EA4335"
                />
              </svg>
              <span>Google</span>
            </a>
          </div>
          <!-- ENLACE A REGISTRO -->
          <div
            class="text-center mt-6"
            data-aos="fade-in"
            data-aos-delay="1600"
          >
            <p class="text-gray-700 dark:text-gray-300 font-poppins">
              ¿No tienes cuenta?
              <a
                href="/auth/register"
                class="text-[#ff6b35] hover:text-[#ff8c42] dark:text-[#ff8c42] dark:hover:text-[#ff6b35] font-medium transition-colors"
                >Registrate aqui</a
              >
            </p>
          </div>
        </form>
      </div>
    </div>

    <!-- Modal Custom -->
    <div
      id="customModal"
      class="fixed inset-0 z-50 flex items-center justify-center hidden"
    >
      <!-- Overlay -->
      <div class="absolute inset-0 bg-black opacity-50 dark:opacity-70"></div>
      <!-- Modal container -->
      <div
        class="relative bg-white dark:bg-[#18181b] text-gray-800 dark:text-gray-100 rounded-lg shadow-lg p-6 max-w-md w-full mx-4"
      >
        <!-- Título del modal -->
        <h2
          id="modalTitle"
          class="text-2xl font-bold mb-4 text-orange-600 font-oswald"
        ></h2>
        <!-- Mensaje del modal -->
        <p id="modalMessage" class="mb-6 text-base"></p>
        <!-- Botón para cerrar -->
        <button
          id="modalClose"
          class="w-full bg-orange-600 hover:bg-orange-700 dark:bg-orange-600 dark:hover:bg-orange-700 text-white font-semibold py-3 rounded-lg transition"
        >
          ACEPTAR
        </button>
      </div>
    </div>

    <!-- SCRIPTS DE FUNCIONALIDAD Y ANIMACION -->
    <script src="/js/loginValidation.js"></script>
    <!-- DETECCION AUTOMATICA DE MODO OSCURO DEL SISTEMA -->
    <script src="/js/colorScheme.js"></script>
  </body>
</html>
